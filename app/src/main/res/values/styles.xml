        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">20dp</item>
        <item name="strokeColor">@android:color/white</item>
    </style>
    <style name="buttonQuestion" parent="Widget.MaterialComponents.ExtendedFloatingActionButton.Icon">
        <item name="android:layout_width">332dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:textSize">13dp</item>
        <item name="android:textAlignment">center</item>
        <item name="backgroundTint">@color/white2</item>
        <item name="strokeColor">@android:color/white</item>
