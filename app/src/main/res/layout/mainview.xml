<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueMain">

    <ImageView
        android:id="@+id/configImageMainView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="327dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="719dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_options" />

    <ImageView
        android:id="@+id/logoImageMainView"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/playButtonMainView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/configImageMainView"
        app:srcCompat="@drawable/logowhiteletters" />

    <Button
        android:id="@+id/playButtonMainView"
        style="@style/buttonOutlined"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:drawableRight="@drawable/ic_rightarrow"
        android:text="P L A Y"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/recordsButtonMainView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoImageMainView" />

    <Button
        android:id="@+id/recordsButtonMainView"
        style="@style/buttonOutlined"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginTop="48dp"
        android:drawableRight="@drawable/ic_record"
        android:text="R E C O R D S"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/statisticsButtonMainView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playButtonMainView" />

    <Button
        android:id="@+id/statisticsButtonMainView"
        style="@style/buttonOutlined"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="239dp"
        android:drawableRight="@drawable/ic_statistics"
        android:text="E S T A D I S T I C A S"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recordsButtonMainView" />

</androidx.constraintlayout.widget.ConstraintLayout>