<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">


    <ImageView
        android:id="@+id/logoImageLoginView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logoroll" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/GroupEmailRegisterView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/black"
        app:boxBackgroundColor="#2CFFFFFF"
        app:boxStrokeColor="@color/black"
        app:counterTextColor="@color/black"
        app:endIconTint="@color/black"
        app:helperTextTextColor="@color/black"
        app:hintTextColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/GroupNameRegisterView"
        app:passwordToggleTint="@color/black"
        app:placeholderTextColor="@color/black"
        app:prefixTextColor="@color/black"
        app:startIconDrawable="@drawable/ic_name_gmail"
        app:startIconTint="@color/black"
        app:suffixTextColor="@color/black">

        <EditText
            android:id="@+id/emailRegisterView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:shadowColor="#F1F1F1" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/GroupPasswordRegisterView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/black"
        app:boxBackgroundColor="#2CFFFFFF"
        app:boxStrokeColor="@color/black"
        app:counterTextColor="@color/black"
        app:endIconTint="@color/black"
        app:helperTextTextColor="@color/black"
        app:hintTextColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/GroupEmailRegisterView"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/black"
        app:placeholderTextColor="@color/black"
        app:prefixTextColor="@color/black"
        app:startIconDrawable="@drawable/ic_name_password"
        app:startIconTint="@color/black"
        app:suffixTextColor="@color/black">

        <EditText
            android:id="@+id/passwordRegisterView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/registerButtonRegisterView"
        style="@style/buttonRegister"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:backgroundTint="#2CFFFFFF"
        android:text="@string/register"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline2"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:strokeColor="@color/black" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/GroupNameRegisterView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollbarThumbHorizontal="@color/black"
        android:scrollbarThumbVertical="@color/black"
        android:textColorHint="@color/black"
        app:boxBackgroundColor="#2CFFFFFF"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/black"
        app:endIconTint="@color/black"
        app:helperTextTextColor="@color/black"
        app:hintTextColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/logoImageLoginView"
        app:passwordToggleTint="@color/black"
        app:placeholderTextColor="@color/black"
        app:prefixTextColor="@color/black"
        app:startIconDrawable="@drawable/ic_name_username"
        app:startIconTint="@color/black"
        app:suffixTextColor="@color/black">

        <EditText
            android:id="@+id/nameRegisterView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:hint="Name"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/GroupConfirmPasswordRegisterView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/black"
        app:boxBackgroundColor="#2CFFFFFF"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/black"
        app:counterTextColor="@color/black"
        app:endIconTint="@color/black"
        app:helperTextTextColor="@color/black"
        app:hintTextColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/GroupPasswordRegisterView"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/black"
        app:placeholderTextColor="@color/black"
        app:prefixTextColor="@color/black"
        app:startIconDrawable="@drawable/ic_name_password"
        app:startIconTint="@color/black"
        app:suffixTextColor="@color/black">

        <EditText
            android:id="@+id/confirmPasswordRegisterView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:drawableTint="@color/black"
            android:ems="10"
            android:hint="Confirm Password"
            android:inputType="textPassword" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.8" />


</androidx.constraintlayout.widget.ConstraintLayout>