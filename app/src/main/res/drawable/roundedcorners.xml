<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Capa para la sombra -->
    <item>
        <shape>
            <corners android:radius="20dp" /> <!-- Radio para hacer esquinas redondeadas -->
            <solid android:color="#2E000000" />

        </shape>
    </item>

    <!-- Capa para el fondo con esquinas redondeadas -->
    <item android:bottom="4dp" android:right="0dp" android:left="0dp">
        <shape>
            <solid android:color="@color/yellowMitology" />
            <corners android:radius="20dp" /> <!-- Radio para hacer esquinas redondeadas -->

        </shape>
    </item>
</layer-list>
